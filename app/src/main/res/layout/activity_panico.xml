<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".Activities.Panico">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:background="#FF0101">
            <LinearLayout
                android:id="@+id/regresar2"
                android:layout_width="wrap_content"
                android:layout_height="80dp">
                <ImageButton
                    android:id="@+id/boton_regresar"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/icono_panico_header"
                    android:layout_width="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bot칩n de p치nico activado"
                    android:textColor="#FFFFFF"
                    android:gravity="center_horizontal"
                    android:textSize="15dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="15dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />



            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:text="@string/textopanico"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:textColor="#030000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/contactoe"
                android:text="Contacto 1: "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:textColor="#666666"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/contactoe1"

                android:text="Contacto 2: "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:textColor="#666666"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/contactoe2"
                android:text="Contacto 3: "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:textColor="#666666"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="5dp"
                android:text="Editar contactos"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:textColor="#666666"
                android:layout_marginRight="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_height="wrap_content" />




            <ImageView
                android:id="@+id/editarContactos"
                android:layout_marginRight="15dp"
                android:layout_gravity="left"
                android:src="@drawable/boton_editar_x2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E3E3E3"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:text="Tienes "
                android:textColor="#030000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:gravity="center_horizontal"
                android:layout_marginLeft="1dp"
                android:id="@+id/timer"
                android:text="tienes "
                android:textColor="#D40303"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:text="@string/textopanico1"
                android:textColor="#030000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp"
                android:layout_marginLeft="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:background="#E3E3E3"
            android:layout_gravity="center_horizontal"
            android:text="para cancelar la alerta."
            android:textColor="#666666"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:background="#E3E3E3"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="230dp">

                <ImageView
                    android:layout_marginTop="30dp"
                    android:id="@+id/animacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_below="@+id/timer" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:background="#E3E3E3"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#030000"
                android:text="Presiona 2 segundos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>
        <TextView
            android:background="#E3E3E3"
            android:textColor="#666666"
            android:text="Para detener el B칩ton de p치nico"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal" />




    </LinearLayout>


</LinearLayout>
