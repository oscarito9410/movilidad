<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">
    <android.support.v4.widget.DrawerLayout
        android:layout_width="240dp"
        android:id="@+id/drawer_layout"
        android:layout_height="match_parent">

        <FrameLayout
            android:orientation="vertical"
            android:id="@+id/content_frame"
            android:alpha="9"
            android:layout_width="240dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:background="#FFD700"
                android:layout_marginTop="25dp">

                <LinearLayout
                    android:id="@+id/cerrarpop"
                    android:layout_width="70dp"
                    android:layout_height="80dp">
                    <ImageButton
                        android:background="@drawable/flecha_cabeza"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginTop="140dp"
                android:layout_height="wrap_content" >
                <TextView
                    android:text="@string/titleZonasUbicacion"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/contenido"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/MainZonas"
                    android:textColor="#666666"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="90dp"
                    android:background="#EFC822"
                    android:text="@string/zonapopboton"/>
                <Button
                    android:id="@+id/Especifica"
                    android:layout_width="100dp"
                    android:textColor="#666666"
                    android:background="#EFC822"
                    android:layout_height="30dp"
                    android:text="@string/botonpop"/>

            </LinearLayout>


            <LinearLayout
                android:layout_below="@+id/contenido"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#3F3E3E"
                android:layout_marginTop="200dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/we7"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/cuentanos"
                    android:layout_marginLeft="140dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />


                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/panico"
                    android:layout_width="40dp"
                    android:layout_marginLeft="120dp"
                    android:layout_height="60dp">

                    <ImageView
                        android:background="@drawable/panico_icono"
                        android:layout_width="25dp"
                        android:layout_marginTop="16dp"
                        android:layout_height="25dp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="240dp"
            android:layout_gravity="start"
            android:id="@+id/contenidor"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="100dp"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/dlete"
                    android:background="@drawable/boton_cerrar_x2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/horarios_menu"
                    android:layout_marginTop="50dp"
                    android:layout_width="300dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="70dp">

                    <ImageView
                        android:id="@+id/reloj"
                        android:background="@drawable/reloj_cabeza"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                    <TextView
                        android:id="@+id/texto_menuHorario"
                        android:text="Horarios"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="#EFEEEE"
                        android:textSize="18sp"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/Ubicacion_menu"
                    android:layout_marginTop="115dp"
                    android:layout_width="300dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="70dp">

                    <ImageView
                        android:id="@+id/tocar"
                        android:background="@drawable/mapa"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                    <TextView
                        android:id="@+id/texto_menuUbicacion"
                        android:text="Ubicaciones"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="#EFEEEE"
                        android:textSize="18sp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/menu_incidencias"
                    android:layout_marginTop="190dp"
                    android:layout_width="300dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="70dp">

                    <ImageView
                        android:id="@+id/icono_incidenciasmenu"
                        android:background="@drawable/incidencias_icono"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                    <TextView
                        android:id="@+id/texto_menuIncidencias"
                        android:text="Incidencias"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="#EFEEEE"
                        android:textSize="18sp"
                        android:layout_height="wrap_content" />


                </LinearLayout>



                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/contacto"
                    android:layout_marginTop="190dp"
                    android:layout_width="300dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="70dp">

                    <ImageView
                        android:id="@+id/contacto1"
                        android:background="@drawable/contacto"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                    <TextView
                        android:id="@+id/contactotexto"
                        android:text="Aseguradoras"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="#EFEEEE"
                        android:textSize="18sp"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/menu_panico"
                    android:layout_marginTop="270dp"
                    android:layout_width="300dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="70dp">

                    <ImageView
                        android:id="@+id/icono_panico_menu"
                        android:background="@drawable/icono_panico"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                    <TextView
                        android:id="@+id/texto_menupanico"
                        android:text="Bóton de Pánico"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="#EFEEEE"
                        android:textSize="18sp"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/pendientes_autorizar"
                    android:layout_marginTop="340dp"
                    android:layout_width="300dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="70dp">

                    <ImageView
                        android:id="@+id/icono_pendiente"
                        android:background="@drawable/icono_panico"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                    <TextView
                        android:id="@+id/texto_pendiente"
                        android:text="Pendientes Autorizar"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="#EFEEEE"
                        android:textSize="18sp"
                        android:layout_height="wrap_content" />


                </LinearLayout>




            </FrameLayout>
        </FrameLayout>




    </android.support.v4.widget.DrawerLayout>



</android.support.v4.widget.DrawerLayout>